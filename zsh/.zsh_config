ZSH_THEME="sorin"
plugins=(git common-aliases)
export EDITOR='vim'
export SHELL='/bin/zsh'
export LS_COLORS='di=1;34:ln=35:so=32:pi=0;33:ex=32:bd=34;46:cd=34;43:su=0;41:sg=0;46:tw=1;34:ow=1;34:'

alias ls="ls -lahFG"
alias cl="clear"
alias rl="source ~/.zshrc"
alias apa="sudo /etc/init.d/apache2 restart"
alias ubu="lsb_release -a"
alias du="du -hsc"
alias prg="cd /var/www"
alias ngr="sudo service nginx restart"
